<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowContentTransitions">true</item>
        <item name="actionModeBackground">@color/colorPrimary</item>
        <item name="windowActionModeOverlay">true</item>

        <item name="popupMenuBackground">@drawable/rounded_rect</item>
        <item name="itemBackground">@drawable/rounded_rect</item>

        <item name="colorControlNormal">@color/blue_400</item>
        <item name="colorControlActivated">@color/blue_400</item>
        <item name="colorControlHighlight">@color/blue_400</item>
    </style>

    <style name="MyAlertStyle" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowIsFloating">false</item>
        <item name="android:statusBarColor">@color/colorPrimaryDark</item>
        <item name="android:windowBackground">@color/colorAccent</item>
    </style>

    <!--Bottom sheet dialog theme -->
    <style name="BottomSheetDialogThemeNoFloating" parent="Theme.Design.Light.BottomSheetDialog">
        <item name="android:windowIsFloating">false</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:windowSoftInputMode">adjustResize</item>

        <item name="colorControlNormal">@color/blue_400</item>
        <item name="colorControlActivated">@color/blue_400</item>
        <item name="colorControlHighlight">@color/blue_400</item>
    </style>

    <style name="materialTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowDrawsSystemBarBackgrounds">false</item>
        <item name="android:statusBarColor">@color/colorPrimaryDark</item>

        <item name="colorControlNormal">@color/blue_400</item>
        <item name="colorControlActivated">@color/blue_400</item>
        <item name="colorControlHighlight">@color/blue_400</item>
    </style>

    <!--Material EditText Theme for blue line-->
    <style name="MaterialEditTextTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowContentTransitions">true</item>
        <item name="actionModeBackground">@color/colorPrimary</item>
        <item name="windowActionModeOverlay">true</item>


        <item name="colorControlNormal">@color/blue_400</item>
        <item name="colorControlActivated">@color/blue_400</item>
        <item name="colorControlHighlight">@color/blue_400</item>
    </style>

    <!--Styles for popup menu in filters-->
    <style name="PopupMenu" parent="@style/Widget.AppCompat.PopupMenu">
        <item name="android:popupBackground">@drawable/rounded_rect</item>
        <item name="android:itemBackground">@drawable/rounded_rect</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textColorPrimary">@color/black</item>
    </style>

</resources>
