<?xml version="1.0" encoding="utf-8"?>

<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="5dp"
    android:layout_marginStart="8dp"
    android:layout_marginEnd="8dp"
    android:elevation="8dp"
    app:cardCornerRadius="4dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <View
            android:id="@+id/item_view"
            android:layout_width="3dp"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignBottom="@id/item_tv_password"
            android:layout_marginStart="1dp"
            android:background="@color/blue"/>

        <TextView
            android:id="@+id/item_tv_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="2dp"
            android:layout_marginBottom="1dp"
            android:text="Label"
            android:textColor="@color/black"
            android:textSize="18sp"
            android:paddingTop="3dp"/>

        <TextView
            android:id="@+id/item_tv_password"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:paddingBottom="4dp"
            android:text="Password"
            android:textSize="16sp"
            android:layout_below="@id/item_tv_label"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/item_tv_label" />

        <ImageButton
            android:id="@+id/item_imgbtn_lock"
            android:layout_width="46dp"
            android:layout_height="46dp"
            android:padding="3dp"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="18dp"
            android:background="@drawable/ic_lock" />
    </RelativeLayout>

</androidx.cardview.widget.CardView>